<%= render CardComponent.new do %>
  <%= render(Card::HeaderComponent.new) do %>
    <div class="d-flex justify-content-between align-items-center">
      <h6 class="mb-0">
        <%= tag.span "", class: "fas fa-circle fa-sm mr-1 text-#{status_color(property.status)}",
            title: property_status_title(property.status), data: tooltip_expando %>
        <%= link_to property.name, property, class: "link-muted" %>
      </h6>
      <div class="position-relative">
        <%= link_to property_property_screenshots_path(property), method: :put, class: "btn btn-xs btn-icon btn-light transition-3d-hover" do %>
          <span class="fas fa-camera"></span>
        <% end if authorized_user.can_admin_system? %>
        <%= link_to property.url, class: "btn btn-xs btn-icon btn-light", target: "_blank" do %>
          <span class="fas fa-external-link"></span>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= render(Card::FooterComponent.new(content: false)) do %>
    <div class="row align-items-center text-center">
      <div class="col-4 p-0">
        <div class="metric">
          <p class="metric-label mb-0">Ttal</p>
          <p class="metric-label mb-2 text-wrap">Impressions</p>
          <h6 class="metric-value"><%= number_with_delimiter property.impressions_count(@start_date, @end_date) %></h6>
        </div>
      </div>
      <div class="col-4 p-0">
        <div class="metric border-left border-right rounded-0 px-2">
          <p class="metric-label mb-0">Avg.</p>
          <p class="metric-label mb-2 text-wrap">Click Rate</p>
          <h6 class="metric-value"><%= number_to_percentage property.click_rate(@start_date, @end_date), precision: 2 %></h6>
        </div>
      </div>
      <div class="col-4 p-0">
        <div class="metric">
          <p class="metric-label mb-0">Est.</p>
          <p class="metric-label mb-2 text-wrap">Earnings</p>
          <h6 class="metric-value"><%= property.property_revenue(@start_date, @end_date).format %></h6>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
